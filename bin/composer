#!/usr/bin/env bash

APP_PATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 || exit ; pwd -P )" && cd "$APP_PATH"/../ || exit

docker run \
  --rm \
  -it \
  -v ./:/app \
  -u dump \
  --add-host host.docker.internal:"$(cat /etc/resolv.conf | grep nameserver | awk "{print \$2}")" \
  -w /app \
  --user $(id -u):$(id -g) dumptec/php-fpm:dev-8.2-0.1.10 \
  bash -c "composer $@"